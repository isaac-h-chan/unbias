{
    "manifest_version": 3,
    "name": "Unbias",
    "description": "Media Bias Remover",
    "version": "1.0",
    "permissions": ["activeTab", "storage", "webNavigation", "scripting"],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "images/icon.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["scripts/content.js"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}